<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andrewchelladurai.simplebible"
    android:versionCode="6"
    android:versionName="1.0.5" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/LightTheme" >
        <activity
            android:name="com.andrewchelladurai.simplebible.Activity_Welcome"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.andrewchelladurai.simplebible.Activity_VerseViewer"
            android:label="@string/title_activity_verse_viewer"
            android:parentActivityName="com.andrewchelladurai.simplebible.Activity_Welcome" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity_Welcome" />
        </activity>
        <activity
            android:name="com.andrewchelladurai.simplebible.Activity_Settings"
            android:label="@string/title_activity_activity__settings"
            android:parentActivityName="com.andrewchelladurai.simplebible.Activity_Welcome" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.andrewchelladurai.simplebible.Activity_Welcome" />
        </activity>
    </application>

</manifest>