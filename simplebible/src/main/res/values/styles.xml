<resources>

  <style name="SbSplashTheme" parent="Theme.MaterialComponents.NoActionBar">
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name="android:navigationBarColor">@color/splash_surface</item>
    <item name="android:statusBarColor">@color/splash_surface</item>
    <item name="cardBackgroundColor">@color/card_background</item>
  </style>

  <style name="SbBaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="android:textColor">@color/text_on_surface</item>
    <item name="colorPrimary">@color/primary</item>
    <item name="colorOnPrimary">@color/on_primary</item>
    <item name="colorSecondary">@color/secondary</item>
    <item name="colorOnSecondary">@color/on_secondary</item>
    <item name="colorSurface">@color/surface</item>
    <item name="colorOnSurface">@color/text_on_surface</item>

    <item name="android:windowBackground">?colorSurface</item>
    <item name="android:navigationBarColor">?colorSurface</item>
    <item name="android:statusBarColor">?colorSurface</item>
  </style>

  <style name="SbBaseTheme.CardStyle" parent="CardView">
    <item name="cardElevation">@dimen/small</item>
    <item name="cardCornerRadius">@dimen/normal</item>
    <item name="cardBackgroundColor">@color/card_background</item>
  </style>

</resources>
