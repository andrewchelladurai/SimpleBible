<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:animateLayoutChanges="true"
  android:orientation="vertical"
  tools:context=".ui.ScreenSearch">

  <com.google.android.material.card.MaterialCardView
    android:id="@+id/screen_search_text_container"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/gap_huge"
    android:layout_marginTop="@dimen/gap_normal"
    android:layout_marginEnd="@dimen/gap_huge"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0">

    <SearchView
      android:id="@+id/screen_search_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:iconifiedByDefault="false"
      android:imeOptions="actionSearch"
      android:importantForAutofill="no"
      android:inputType="textNoSuggestions"
      android:layoutDirection="rtl"
      android:queryHint="@string/screen_search_text_hint"
      android:searchIcon="@drawable/ic_magnifier" />
  </com.google.android.material.card.MaterialCardView>

  <ScrollView
    android:id="@+id/screen_search_tips_text_container"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:padding="@dimen/gap_huge"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/screen_search_text_container">

    <TextView
      android:id="@+id/screen_search_tips_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:padding="@dimen/gap_huge"
      android:text="@string/screen_search_tips_text" />
  </ScrollView>

  <com.google.android.material.bottomappbar.BottomAppBar
    android:id="@+id/screen_search_bottom_appbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:hideOnScroll="false"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="1.0"
    app:menu="@menu/screen_search_bottom_appbar_menu"
    tools:ignore="BottomAppBar">

    <HorizontalScrollView
      android:id="@+id/screen_search_title_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:animateLayoutChanges="true"
      android:fillViewport="true">

      <TextView
        android:id="@+id/screen_search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true" />
    </HorizontalScrollView>
  </com.google.android.material.bottomappbar.BottomAppBar>

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/screen_search_list"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:padding="@dimen/gap_huge"
    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
    app:layout_constraintBottom_toTopOf="@+id/screen_search_bottom_appbar"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:spanCount="@integer/screen_search_list_columns"
    tools:listitem="@layout/screen_search_list_item" />

</androidx.constraintlayout.widget.ConstraintLayout>
