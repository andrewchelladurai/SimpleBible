<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginStart="@dimen/gap_huge"
  android:layout_marginEnd="@dimen/gap_huge"
  android:padding="@dimen/gap_small">

  <com.google.android.material.chip.Chip
    android:id="@+id/screen_books_list_item_chapter_count"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/gap_small"
    android:clickable="false"
    android:textColor="?colorOnPrimary"
    app:chipBackgroundColor="?colorPrimary"
    app:layout_constraintBottom_toBottomOf="@id/screen_books_list_item_desc_container"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/screen_books_list_item_name_container"
    tools:text="119 Chapters" />

  <HorizontalScrollView
    android:id="@+id/screen_books_list_item_name_container"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/gap_small"
    android:fillViewport="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@id/screen_books_list_item_chapter_count"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0">

    <TextView
      android:id="@+id/screen_books_list_item_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif-black"
      android:paddingStart="@dimen/gap_small"
      android:paddingEnd="@dimen/gap_small"
      android:textAppearance="@style/TextAppearance.AppCompat.Title"
      tools:text="Song of Solomon" />
  </HorizontalScrollView>

  <HorizontalScrollView
    android:id="@+id/screen_books_list_item_desc_container"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="@id/screen_books_list_item_name_container"
    app:layout_constraintStart_toStartOf="@id/screen_books_list_item_name_container"
    app:layout_constraintTop_toBottomOf="@id/screen_books_list_item_name_container"
    app:layout_constraintVertical_bias="0">

    <TextView
      android:id="@+id/screen_books_list_item_desc"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif-light"
      android:paddingStart="@dimen/gap_small"
      android:paddingEnd="@dimen/gap_small"
      tools:text="Description for Song of Solomon" />
  </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
