<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small"
    app:cardCornerRadius="@dimen/normal"
    app:cardElevation="@dimen/normal"
    app:cardMaxElevation="@dimen/normal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/small">

        <TextView
            android:id="@+id/item_bookmark_verse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/item_bookmark_template_verse" />

        <TextView
            android:id="@+id/item_bookmark_note"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal"
            app:layout_constraintEnd_toEndOf="@+id/item_bookmark_verse"
            app:layout_constraintStart_toStartOf="@+id/item_bookmark_verse"
            app:layout_constraintTop_toBottomOf="@+id/item_bookmark_verse"
            tools:text="@string/item_bookmark_template_note" />

        <ImageButton
            android:id="@+id/item_bookmark_action_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal"
            android:backgroundTint="?colorSurface"
            android:contentDescription="@string/item_bookmark_action_delete"
            android:padding="@dimen/big"
            app:layout_constraintEnd_toEndOf="@id/item_bookmark_note"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_bookmark_note"
            app:srcCompat="@drawable/ic_delete" />

        <ImageButton
            android:id="@+id/item_bookmark_action_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?colorSurface"
            android:contentDescription="@string/item_bookmark_action_share"
            android:padding="@dimen/big"
            app:layout_constraintBottom_toBottomOf="@id/item_bookmark_action_delete"
            app:layout_constraintEnd_toStartOf="@id/item_bookmark_action_delete"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_bookmark_action_delete"
            app:srcCompat="@drawable/ic_share" />

        <ImageButton
            android:id="@+id/item_bookmark_action_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?colorSurface"
            android:contentDescription="@string/item_bookmark_action_edit"
            android:padding="@dimen/big"
            app:layout_constraintBottom_toBottomOf="@id/item_bookmark_action_share"
            app:layout_constraintEnd_toStartOf="@id/item_bookmark_action_share"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_bookmark_action_share"
            app:srcCompat="@drawable/ic_edit" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
