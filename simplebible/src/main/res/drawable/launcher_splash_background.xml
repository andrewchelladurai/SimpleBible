<?xml version="1.0" encoding="utf-8"?><!-- The android:opacity=”opaque” line — this is critical in preventing a flash of black as your theme transitions. -->
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:opacity="opaque">
  <item android:drawable="@color/splash_launcher_background" />
  <item android:gravity="center">
    <bitmap
      android:antialias="true"
      android:autoMirrored="true"
      android:gravity="center"
      android:mipMap="true"
      android:src="@mipmap/ic_launcher_foreground"
      android:tileMode="disabled" />
  </item>
</layer-list>
